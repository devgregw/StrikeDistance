<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionMenuTextColor">@color/StrikeDistanceBackground</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/buttonsty</item>
    </style>
    
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/StrikeDistanceTheme</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="android:actionMenuTextColor">@color/StrikeDistanceBackground</item>
    </style>
    
    <style name="ActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/StrikeDistanceBackground</item>
    </style>
    
    <style name="buttonsty" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_new</item>
    </style>

</resources>
