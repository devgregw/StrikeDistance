<Page
    x:Class="StrikeDistance_WindowsPhone.CalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar x:Name="ButtonBar" Background="{StaticResource StrikeDistanceThemeBrush}" Foreground="{StaticResource StrikeDistanceForegroundBrush}" BorderBrush="White">
            <CommandBar.ContentTransitions>
                <TransitionCollection/>
            </CommandBar.ContentTransitions>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='1' x:Name="ReportButton" Label="report a bug"                           />
                <AppBarButton x:ConnectionId='2' x:Name="SettingsButton" Label="settings"                             />
                <AppBarButton x:ConnectionId='3' x:Name="AboutButton" Label="about"                          />
                <AppBarButton x:ConnectionId='4' x:Name="AppsButton" Label="more apps"                         />
                <AppBarButton x:ConnectionId='5' x:Name="RateButton" Label="rate+review"                         />
            </CommandBar.SecondaryCommands>
            <AppBarButton x:ConnectionId='6' x:Name="CalculateButton" Label="calculate"                               Icon="Calculator"/>
            <AppBarButton x:ConnectionId='7' x:Name="ClearAllButton" Icon="Clear" Label="reset all"                             />
        </CommandBar>
    </Page.BottomAppBar>
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition/>
        </TransitionCollection>
    </Page.Transitions>
    <Grid Background="{ThemeResource PhoneBackgroundBrush}" x:Name="ContentRoot">
        <Grid VerticalAlignment="Top" Background="{StaticResource StrikeDistanceThemeBrush}" Height="46" Margin="0,-27,0,0">
            <TextBlock TextWrapping="Wrap" FontWeight="Black" FontSize="18" Text="CALCULATOR" Foreground="{StaticResource StrikeDistanceForegroundBrush}" Margin="0,0,276,0" VerticalAlignment="Bottom"/>
        </Grid>
        <TextBlock Margin="0,27,0,0" TextWrapping="Wrap" Text="OUTSIDE TEMPERATURE" VerticalAlignment="Top" FontSize="20" FontWeight="Black" TextAlignment="Center" Foreground="{ThemeResource PhoneForegroundBrush}"/>
        <TextBox x:Name="TempBox" Margin="10,56,153,0" TextWrapping="Wrap" VerticalAlignment="Top" InputScope="Number" IsTextPredictionEnabled="False" PlaceholderText="please wait" Text="0" TabIndex="1" TabNavigation="Once" Foreground="{ThemeResource TextBoxButtonForegroundThemeBrush}" Background="{ThemeResource TextBoxBackgroundThemeBrush}" BorderBrush="{ThemeResource TextBoxBorderThemeBrush}"/>
        <AppBarButton x:ConnectionId='8' x:Name="LocationButton" HorizontalAlignment="Right" Icon="Globe" Label="use my location" Margin="0,44,5,0" VerticalAlignment="Top"                              TabIndex="3" TabNavigation="Once" Foreground="{ThemeResource PhoneForegroundBrush}"/>
        <AppBarButton x:ConnectionId='9' x:Name="InvertButton" HorizontalAlignment="Right" Icon="Sync" Label="invert" Margin="0,44,81,0" VerticalAlignment="Top"                            TabIndex="2" Foreground="{ThemeResource PhoneForegroundBrush}"/>
        <TextBlock Margin="0,117,0,0" TextWrapping="Wrap" Text="TIME BETWEEN FLASH AND BOOM" VerticalAlignment="Top" FontSize="20" FontWeight="Black" TextAlignment="Center" Foreground="{ThemeResource PhoneForegroundBrush}"/>
        <TextBox x:Name="TimeBox" Margin="10,146,153,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" InputScope="Number" IsTextPredictionEnabled="False" PlaceholderText="" TabIndex="4" TabNavigation="Once" Foreground="{ThemeResource TextBoxButtonForegroundThemeBrush}" Background="{ThemeResource TextBoxBackgroundThemeBrush}" BorderBrush="{ThemeResource TextBoxBorderThemeBrush}"/>
        <AppBarToggleButton x:ConnectionId='10' x:Name="StopwatchButton" HorizontalAlignment="Right" Label="stopwatch" Margin="0,135,81,0" VerticalAlignment="Top" IsChecked="False"                                                                         TabIndex="5" TabNavigation="Once" Foreground="{ThemeResource PhoneForegroundBrush}">
            <AppBarToggleButton.Icon>
                <SymbolIcon RenderTransformOrigin="0.5,0.5" Symbol="Clock"/>
            </AppBarToggleButton.Icon>
        </AppBarToggleButton>
        <AppBarButton x:ConnectionId='11' x:Name="StopwatchClearButton" HorizontalAlignment="Right" Icon="Clear" Label="clear" Margin="0,135,5,0" VerticalAlignment="Top"                                    TabIndex="6" TabNavigation="Once" Foreground="{ThemeResource PhoneForegroundBrush}"/>
        <TextBlock Margin="0,208,0,0" TextWrapping="Wrap" Text="WEATHER OVERVIEW" VerticalAlignment="Top" FontSize="20" FontWeight="Black" TextAlignment="Center" Foreground="{ThemeResource PhoneForegroundBrush}"/>
    </Grid>
</Page>

